#!/usr/bin/env bash
set -eu

log() {
  echo "***************************************************"
  echo "   $*"
  echo "***************************************************"
}

bench() {
  echo "$*"
  time "$@"
}

cache_url=https://s3.amazonaws.com/${S3_BUCKET}/

rm -f ./result

log Uncached speed
nix-collect-garbage -d
bench nix-build --no-out-link

log Remote cache speed
nix-collect-garbage -d
bench nix-build --no-out-link --option extra-binary-caches "$cache_url"

log Local cache speed
bench nix-build --no-out-link

